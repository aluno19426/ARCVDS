<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Associação Recreativa Cultural Vale da Serra</title>
    <link rel="icon" type="image/png" href="~/ImagensEventos/Associacao.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="position:relative">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ARCVDS", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Contactos", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Eventos", "Eventos", "Home")</li>
                    <li>@Html.ActionLink("Beneficios", "Beneficios", "Home")</li>

                    @if(User.IsInRole("Socios")) {
                        <li><a href="~/Quotas/QuotasUser">Minhas Quotas</a></li>
                        <li><a href="~/Pagamentos/PagamentosUser">Meus Pagamentos</a></li>
                     }
                            @if(User.Identity.IsAuthenticated && User.IsInRole ("Admin") || User.IsInRole("Funcionarios")) {
                                <li class="dropdown">
                                <a href="#" class="dropdown-toggle btnBarra" data-toggle="dropdown">GestaoBD!<b class="caret"></b></a>
                                <ul class="dropdown-menu">     
                                    <li><a href="~/Pessoas/Index">Pessoas</a></li>
                                    <li><a href="~/Pagamentos/Index">Pagamentos</a></li>
                                    <li><a href="~/Beneficios/Index">Benefícios</a></li>
                                    @if(User.IsInRole("Admin")) {
                                    <li><a href="~/UsersAdmin/Index">Utilizadores</a></li>
                                    <li><a href="~/RolesAdmin/Index">Funções</a></li>
                                    }
                                </ul>
                            </li>
                            }
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            @RenderBody()
            <div class="footer-2">
                <div class="container">
                    <div class="row">
                        <div class="col-8 col-sm-6 col-md-6">
                            <p class="text-left" style="margin-top: 5%; margin-bottom: 3%;">© 2018 Diogo Martins - Trabalho de TI2</p>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6">
                            <p class="text-right" style="margin-top: 5%; margin-bottom: 8%%; font-size: 1em;">Alguém lé isto?</p>
                        </div>
                    </div>
                </div>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </body>
        </html>
