@if(User.Identity.IsAuthenticated && User.IsInRole ("Admin") || User.IsInRole ("Funcionarios")) {

    <!DOCTYPE html>
    <html lang="pt">
    <head>
        <meta charset="utf-8" />
        <title>Página do Indisponivel!</title>
    </head>
    <style>
        #imageIndisponivel {
            margin-left: auto;
            margin-right: auto;
            display: block;
            opacity: 0.5;
        }

        .indisponivel {
            min-height: 100%; /* Fallback for browsers do NOT support vh unit */
            min-height: 100vh; /* These two lines are counted as one :-)       */
            display: flex;
            align-items: center;
        }
    </style>
    <body>
        <div class="jumbotron indisponivel">
            <h1 style="text-align:center;">Página Indisponivel Colega!</h1>
            <!-- ref: https://rutgersonline.desk.com/customer/en/portal/articles/2635151-canvas-course-roles-and-permissions -->
            <img id="imageIndisponivel" src="~/Imagens/Indisponivel.png" />
        </div>
    </body>
</html>
}
