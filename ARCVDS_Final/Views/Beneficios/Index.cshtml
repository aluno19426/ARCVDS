@model IEnumerable<ARCVDS_Final.Models.Beneficios>

@{
    ViewBag.Title = "Benefícios";
}
<style>
    a {
        color: black;
    }

        a:hover {
            color: #3276b1;
        }
</style>
<h2><a style="color:black;">Lista de Benefícios!</a></h2>

<p>
    <a class="btn btn-danger" href="~/Beneficios/Create" style="color:white;">Novo benefício?</a>
</p>
<div class="containercenas" style="background-color: rgba(255, 255, 255, 0.3); border-radius: 5px; text-align:center;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>

        @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_Beneficio }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.id_Beneficio }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.id_Beneficio })
                </td>
            </tr>
        }

    </table>
</div>