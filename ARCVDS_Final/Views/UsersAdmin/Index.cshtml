@model IEnumerable<ARCVDS_Final.Models.ApplicationUser>

@{
    ViewBag.Title = "Roles";
}


<style>
    a {
        color: black;
    }

        a:hover {
            color: #3276b1;
        }
</style>
<h2><a style="color:black;">Admin cria novos Moderadores!</a> </h2>
<h3>
    <a class="btn btn-danger" href="~/UsersAdmin/Create" style="color:white;">Novo User</a>
</h3>
<div class="containercenas" style="background-color: rgba(255, 255, 255, 0.3); border-radius: 5px; text-align:center;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
        </tr>

        @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
