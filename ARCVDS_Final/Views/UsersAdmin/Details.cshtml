@model ARCVDS_Final.Models.ApplicationUser

@{
    ViewBag.Title = "Detalhes";
}

<style>
    dt {
        text-align: left;
        color: black;
    }
</style>
<h2><a style="color:black;">Detalhes da Role</a></h2>

<div>
    <div class="containercenas" style="background-color: rgba(255, 255, 255, 0.3); border-radius: 5px; text-align:center">
    <hr />
    <dl class="dl-horizontal">
        <dt class="alinhar" >
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
    <h4 style="color:black;">List of roles for this user</h4>
    @if(ViewBag.RoleNames.Count == 0) {
        <hr />
        <p>No roles found for this user.</p>
    }

    <table class="table">

        @foreach(var item in ViewBag.RoleNames) {
            <tr>
                <td style="color:black;">
                    @item
                </td>
            </tr>
        }
    </table>
</div>
<p>
    <a href="/UsersAdmin/Index" style="color:white;" class="btn btn-primary">Lista de Roles</a>
</p>


