@model ARCVDS_Final.Models.RoleViewModel

@{
    ViewBag.Title = "Editar";
}

<h2><a style="color:black;">Editar Role</a></h2>


@using(Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="container" flex-wrap>
            <div style="background-color: rgba(255, 255, 255, 0.3); border-radius: 5px; text-align:center;">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                    <div class="col-md-1">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a href="/RolesAdmin/Index" style="color:white;" class="btn btn-primary">Lista de Roles!</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
