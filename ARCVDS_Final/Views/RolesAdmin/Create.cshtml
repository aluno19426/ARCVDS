@model ARCVDS_Final.Models.RoleViewModel

@{
    ViewBag.Title = "Criar";
}

<h2><a style="color:black;">Nova Role</a></h2>

@using(Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="container" flex-wrap>
            <div style="background-color: rgba(255, 255, 255, 0.3); border-radius: 5px; text-align:center;">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2",@style ="color:black;" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-primary" href="/RolesAdmin/Index" style="color:white;">Voltar à lista!</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
